uses <crt>
uses <forms>

var Drawing = false

class MyForm(app.form):
  proc OnMouseDown,
       OnMouseUp,
       OnMouseMove,
       OnCloseQuery
end

proc MyForm::OnMouseDown(x, y, button):
  Drawing = true
  $Canvas -> MoveTo(x, y)
end

proc MyForm::OnMouseUp(x, y, button):
  Drawing = false
end

proc MyForm::OnMouseMove(x, y):
  if Drawing:
    $Canvas -> LineTo(x, y)
  end
end

proc MyForm::OnCloseQuery():
  Halt()
end

proc main():
  new MyForm()
  app.run()
end
