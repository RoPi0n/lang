uses <classes\streams>
uses "gen\svm\gen.mash"

enum SupportedArch [saSVM]

class Generator:
  protected:
    var Arch,
        GenInstance

  public:
    proc Create,
         Build
end

proc Generator::Create(Arch):
  $Arch ?= Arch

  switch Arch:
    case saSVM:
      $GenInstance ?= new GeneratorSVM()
    end

    else:
      $GenInstance ?= new GeneratorSVM()
  end
end

proc Generator::Build(ast, out):
  $GenInstance -> Build(ast, out)
end
